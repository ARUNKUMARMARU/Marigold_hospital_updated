    <script>
      const openModalButton = document.getElementById("openModal");
      const modalOverlay = document.getElementById("modalOverlay");
      const closeButton = document.getElementById("closeButton");

      openModalButton.addEventListener("click", () => {
        modalOverlay.style.display = "flex";
      });

      closeButton.addEventListener("click", () => {
        modalOverlay.style.display = "none";
      });

      window.addEventListener("click", (event) => {
        if (event.target === modalOverlay) {
          modalOverlay.style.display = "none";
        }
      });

      $(document).ready(function () {
        AOS.init();

        var heroSlider = $(".slider-banner");
        heroSlider.owlCarousel({
          loop: true,
          items: 1,

          margin: 0,
          autoplay: true,
          nav: true,
        });

        heroSlider.on("changed.owl.carousel", function (event) {
          var item = event.item.index - 2;
          $("p").removeClass("animate__animated animate__zoomInLeft");
          $(".owl-item")
            .not(".cloned")
            .eq(item)
            .find("p")
            .addClass("animate__animated animate__zoomInLeft");

          $("a").removeClass("animate__animated animate__zoomInLeft");
          $(".owl-item")
            .not(".cloned")
            .eq(item)
            .find("a")
            .addClass("animate__animated animate__zoomInLeft");
        });

        $(".treatment-slider").owlCarousel({
          loop: true,
          items: 1,
          dots: false,

          margin: 0,
          autoplay: true,
          nav: true,
          responsive: {
            0: {
              items: 1,
              nav: true,
              margin: 20,
            },
            600: {
              items: 1,
              nav: false,
            },
            1000: {
              items: 1,
              nav: true,
              loop: false,
            },
          },
        });
      });

      $(document).ready(function () {
        new PureCounter({
          selector: ".purecounter",
          start: 0,
          end: 100,
          duration: 2,
          delay: 10,
          once: true,
          repeat: false,
          decimals: 0,
          legacy: true,
          filesizing: false,
          currency: false,
          separator: false,
        });

        const navbarToggle = document.getElementById("navbarToggle");
        const sidebar = document.getElementById("sidebar");

        navbarToggle.addEventListener("click", () => {
          sidebar.style.right === "-250px";
          if (sidebar.style.right === "0px") {
            sidebar.style.right = "-250px";
          } else if ((sidebar.style.right = "-250px")) {
            sidebar.style.right = "0px";
          }
        });
      });

     

