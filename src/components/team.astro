<style lang="scss">
  .max-width-250{
    max-width: 250px;
  }
  .team-max-width{
    max-width: 250px;
  }
  .m-team {
    position: relative;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    // flex-direction: column;
    column-gap: 2rem;

    @media screen and (max-width: 820px) {
      grid-template-columns: repeat(2, 1fr);
      row-gap: 2rem;
    }
    @media screen and (max-width: 540px) {
      grid-template-columns: repeat(1, 1fr);
      row-gap: 2rem;
    }

    .team-wrapper {
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      border-radius: 25px;
      background-color: rgb(242, 243, 245);
      padding: 2rem 0;
      transition: var(--transition);
       box-shadow: 0px 0px 7px 1px var(--clr-one);

      cursor: pointer;

      img {
        height: 300px;
        object-fit: cover;
        margin: 0 auto;
        // background-color: green;
      }

      .sub-head{
        font-size: clamp(14px, 4vw, 18px);
      }

      P{
        text-transform: capitalize;
      }

      .words {
        text-align: justify;
        padding: 1rem;
        height: 0px;
        overflow: hidden;
      }
    }
  }

  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
  }

  .modal-content {
    background-color: rgb(248, 248, 248);
    margin: 10% auto;
    padding: 20px;
    border-radius: 25px;
    border: 1px solid #888;
    max-width: 60%;
    min-width: 400px;

    display: flex;
    flex-direction: column;
    text-align: left;
    // justify-content: center;
    align-items: flex-start;
    gap: 1rem;
  }

  .close {
    float: right;
    font-size: 24px;
    font-weight: bold;
    cursor: pointer;
  }

  .close:hover {
    color: red;
  }
</style>
