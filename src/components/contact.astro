---
import Contacts from "./sendmail.astro";
---

<div class="section-pad contact-section">
  <div class="container"> 
    <div class="d-flex flex-column gap-4 pb-5">
      <p class="section-title text-center">
        Contact for Emergency
      </p>
      <div class="text-center">
        <a href="tel:+91 9845780994">
          <button class="btnn"> Call Now : +91 9845780994</button>
        </a>
      </div>
    </div>
    <div class="section-title text-center pb-5" data-aos="fade-in"
    data-aos-duration="900"
    data-aos-easing="ease-in">
      Make an <span ><b>Appointment</b></span>
    </div>
    <div class="row justify-content-center gap-5 m-0">
      <div class="col-lg-5 p-0" data-aos="fade-up"
      data-aos-duration="400"
      data-aos-easing="ease-in">
        <Contacts  />
      </div>
      <div class="col-lg-5 p-0" data-aos="fade-in"
      data-aos-duration="300"
      data-aos-easing="ease-in">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3888.907834675831!2d77.60195317586414!3d12.913644916144685!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae1503041ed01b%3A0xce49638fb71de663!2sMARIGOLD%20HOSPITALS!5e0!3m2!1sen!2sin!4v1691490003060!5m2!1sen!2sin"
          width="600"
          height="450"
          class="border"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  .border{
    border: 0;
  }
  .contact-section {
    .row {
      align-items: stretch;

      > :nth-child(2) {
        iframe {
          height: 100%;
          width: 100%;
        }
      }
    }
    

   
  }

  @media screen and (max-width: 820px) {
    .contact-section {
      .row {
        > :nth-child(1) {
          width: 90% !important;
          
        }
        > :nth-child(2) {
          width: 90% !important;
          height: 400px;
        }
      }
    }
  }
</style>
