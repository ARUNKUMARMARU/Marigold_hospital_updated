<style lang="scss">
  
  .facilities {
    position: relative;
    .grid-container {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 50px;
      padding: 0;
      margin: 0;
      padding: 20px;
      z-index: -3 !important;
    }

    .grid-item {
      display: flex;
      flex-direction: column;
      position: relative;
      border-radius: 20px;
      background-color: white;
      padding: 2rem;
      gap: 2rem;
      box-shadow: 0px 0px 10px 5px rgba(0, 0, 0, 0.085);
      transition: var(--transition);

      &:hover {
        .sub-head {
          clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
        }
      }

      .sub-head {
        background-color: var(--clr-one-light);
        padding: 1rem;
        text-align: center;
        color: white;
        transition: var(--transition);

        -webkit-clip-path: polygon(13% 0, 100% 0%, 90% 100%, 0% 100%);
        clip-path: polygon(13% 0, 100% 0%, 90% 100%, 0% 100%);
      }

      h4 {
        cursor: pointer;
      }

      &:hover {
        transform: translateY(-20px);
      }
    }

    .grid-item img {
      max-width: 80px;

      margin: 0 auto;
    }
  }

  .about {
    .words {
      width: 80%;
      text-align: justify;
    }
  }

  .speciality {
    .container {
      position: relative;
    }
    .tab-title {
      display: none;
    }
    .services {
      padding: 1rem;
      height: 200px;

      .sub-head {
        font-weight: bold;
      }
    }
  }

  .highlights {
    .highlight-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      column-gap: 4rem;
      row-gap: 4rem;

      .highlight {
        // background-color: aliceblu;
        padding: 1rem 2rem;
        border-radius: 20px;
        box-shadow: 0px 0px 7px 2px var(--clr-one-3);
        border: solid 2px var(--clr-one);

        .heading {
          span {
            font-size: 50px !important;
          }
        }

        &:hover {
          border: solid 2px var(--clr-one);
        }
      }
    }
  }



  @media screen and (max-width: 1300px) {
    .tab-title {
      display: block !important  ;
    }
  }
  @media screen and (max-width: 1024px) {
    .facilities {
      .grid-container {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    .highlights {
      .highlight-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
      }
    }
  }
  @media screen and (max-width: 820px) {
    .facilities {
      .grid-container {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  }
  @media screen and (max-width: 738px) {
    .facilities {
      .grid-container {
        grid-template-columns: repeat(1, 1fr);
      }
    }
  }

  @media screen and (max-width: 590px) {
    .highlights {
      .highlight-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        column-gap: 2rem;
        row-gap: 2rem;
      }
    }
  }

  .blink {
    animation: blink-animation 1s steps(5, start) infinite;
    -webkit-animation: blink-animation 1s steps(5, start) infinite;
  }
  @keyframes blink-animation {
    to {
      visibility: hidden;
    }
  }
  @-webkit-keyframes blink-animation {
    to {
      visibility: hidden;
    }
  }

  .content {
    display: none;
  }
</style>
